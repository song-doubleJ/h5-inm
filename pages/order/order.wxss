page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  background-color: #f3f3f3;
}
.tab{
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  display: flex;
  height: 80rpx;
  flex-direction: row;
  padding:20rpx 45rpx 0rpx 45rpx;
  justify-content: space-between;
}
.tab>view{
  font-size: 28rpx;
  color: #646566;
 
}
.active{
  border-bottom: 5rpx solid #fdd23d;
}

.content{
  box-sizing: border-box;
  height: 80%;
}
swiper{
  box-sizing: border-box;
  height: 100%;

  width: 100%;
}
swiper-item{
  box-sizing: border-box;
  margin: 35rpx;
  height: 100%;
  width: 100%;
}
.lideng-page{
  width: 92%;
  

  box-sizing:  border-box;
  
  height: 100%;
 
}

.order-card{
  border-radius: 18rpx;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
  width: 100%;
}
.order-card>.title{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.order-card>.title>.store{
  font-weight: 600;
}
.order-card>.title>.state{
  color: #6a6a6a;
  font-size: 25rpx;
}
.order-card>.order-content{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.order-card>.order-content>.left{
  display: flex;
  flex-direction: row;
}

.order-card>.order-content>.left>.pic>image{
  width: 140rpx;
  height: 140rpx;
}
.order-card>.order-content>.left>.detail{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.order-card>.order-content>.left>.detail>.attr{
  color: #cccccc;
}
.order-card>.order-content>.right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100rpx;
}
.order-card>.order-content>.right>.num{
  color: #cccccc;
}

.order-card>.bottom{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
}

.com{
  margin-top: 20rpx;
  width: 128rpx;
  height: 55rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  border: 1rpx #dddddd solid;

}

.com>view{
  font-size: 30rpx;
  color: #6b6b6b;
}